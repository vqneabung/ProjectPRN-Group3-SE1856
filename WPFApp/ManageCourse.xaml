<Window x:Class="WPFApp.ManageCourse"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        mc:Ignorable="d"
        Title="ManageCourse" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="0,0,0,82">
            <DataGrid Height="353" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        </StackPanel>
        <StackPanel Margin="0,358,0,0" Orientation="Horizontal">
            <Button Content="Join Course" Width="134" Margin="45 10"></Button>
            <Button Content="Return To HomePage" Width="134" Margin="45 10"></Button>
        </StackPanel>
    </Grid>
</Window>
