<Window x:Class="WPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        mc:Ignorable="d"
        Title="Login Window" Height="300" Width="500">
    <Grid>
        <StackPanel>
            <Label Target="{Binding ElementName=txtUserName}" Content="Username"/>
            <TextBox Name="txtUserName" Width="390"/>

            <Label Target="{Binding ElementName=txtPassword}" Content="Password"/>
            <PasswordBox Name="txtPassword" Width="390"/>

            <Button Click="btnLogin_Click" Content="Login" Margin="200,10"/>
            <Button Click="btnClose_Click" Content="Close" Margin="200,10"/>
        </StackPanel>
    </Grid>
</Window>
